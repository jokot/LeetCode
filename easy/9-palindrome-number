class Solution {
    fun isPalindrome(x: Int): Boolean {
        if (x < 0) return false
        val xS = x.toString()
        if (xS.length == 1) return true

        var isPalindrome = true
        val length = xS.lastIndex
        val iteration = length/2
        for (i in 0..iteration) {
            if (xS[i] != xS[length-i]) {
                isPalindrome = false
                break
            }
        }

        return isPalindrome
    }
}